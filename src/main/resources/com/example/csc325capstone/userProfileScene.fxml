                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <Label layoutX="466.0" layoutY="73.0" text="Your Logs">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Label>
            <ListView fx:id="hikeLogListView" layoutX="466.0" layoutY="95.0" prefHeight="200.0" prefWidth="363.0" />
            </children>
        </Pane>
    </children>
</AnchorPane>
